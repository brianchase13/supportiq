# SupportIQ Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# AI (OpenAI)
# =============================================================================
OPENAI_API_KEY=sk-your_openai_key_here

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_STARTER_PRICE_ID=price_your_starter_price_id_here
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id_here

# =============================================================================
# CUSTOMER SUPPORT (Intercom)
# =============================================================================
INTERCOM_CLIENT_ID=your_intercom_client_id_here
INTERCOM_CLIENT_SECRET=your_intercom_client_secret_here
INTERCOM_ACCESS_TOKEN=your_intercom_access_token_here
INTERCOM_WEBHOOK_SECRET=your_intercom_webhook_secret_here

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=your_resend_api_key_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# MONITORING (Sentry)
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# NOTIFICATIONS (Slack)
# =============================================================================
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_DEFAULT_CHANNEL=#support-alerts

# =============================================================================
# REDIS (Optional - for rate limiting)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOGGING_SERVICE_URL=your_logging_service_url_here
LOGGING_SERVICE_KEY=your_logging_service_key_here

# =============================================================================
# DEVELOPMENT
# =============================================================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_here 